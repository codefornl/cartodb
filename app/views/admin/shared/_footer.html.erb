<% light = false if !light.present? %>

<div class="CDB-Text CDB-FontSize-medium u-tSpace-xl Footer <%= 'Footer--light' if light %>">
  <div class="u-inner Footer-inner">
    <ul class="Footer-list Footer-list--primary">
      <% unless cartodb_com_hosted? %>
        <li class="Footer-listItem CDB-Text CDB-Size-medium"><a href="https://carto.com/learn/guides/"><%= I18n.t('general.guides', default: "Guides")%></a></li>
        <li class="Footer-listItem CDB-Text CDB-Size-medium"><a href="https://carto.com/docs"><%= I18n.t('general.documentation', default: "Documentation")%></a></li>
      <% end %>
      <% unless cartodb_onpremise_version.blank? %>
        <li class="Footer-listItem CDB-Text CDB-Size-medium"><%= I18n.t('general.version', default: "Version")%>: <%= cartodb_onpremise_version %></li>
      <% end %>
    </ul>

    <ul class="Footer-list Footer-list--secondary">
      <% unless cartodb_com_hosted? %>
        <li class="Footer-listItem CDB-Text CDB-Size-medium"><a href="mailto:support@carto.com"><%= I18n.t('general.support', default: "Support")%></a></li>
      <% else %>
        <li class="Footer-listItem CDB-Text CDB-Size-medium"><a href="mailto:onpremise-support@carto.com"><%= I18n.t('general.support', default: "Support")%></a></li>
      <% end %>
      <li class="Footer-listItem CDB-Text CDB-Size-medium"><a href="mailto:contact@carto.com"><%= I18n.t('general.contact', default: "Contact")%></a></li>
    </ul>
  </div>
</div>
